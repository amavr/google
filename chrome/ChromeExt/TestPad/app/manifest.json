{
    "manifest_version": 2,

    "name": "TestPad",
    "description": "This extension tests a browser action",
    "version": "1.0.2",

    "permissions": [
        "identity",
        "tabs",
        "https://*.google.com/"
    ],

    "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'",

    "browser_action": {
        "default_icon": "img/icon.png",
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": [ "background.js" ]
    },

    "key": "hofdfblhcmepaacojjjonbmheaphpnea"
}
